    <mapping>
        <class-a>com.example.mbs.impl.data.entity.CityEntity</class-a>
        <class-b>com.example.mbs.api.dto.CityDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>name</a>
